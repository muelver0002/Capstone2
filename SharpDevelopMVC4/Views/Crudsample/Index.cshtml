@model List<SharpDevelopMVC4.Models.Product>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

 @if (Request.IsAuthenticated)
     {
          
          
 <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4" >Find Vet That You Like!</h1>
        <!-- /try put somthing here -->
        <hr />
        
         @if(User.IsInRole("admin"))
	              {
	               
	              		<a href="/crudsample/manage" class="btn btn-outline-success btn-lg">Manage Vets</a>
	              }  
	

      </div>
      <!-- /.col-lg-3 -->
      
      <div class="col-lg-9">
         <br><br><br>
         
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        
        
        
   <form action="/crudsample/search">

   
   <div class="container">  
    <div class="row">
      <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                <div class="input-group">
                 <!--/.   <input class="form-control" type="text" name="Key"  placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" required/> -->
                    
                    <input class="form-control" type="text" name="Key"  placeholder="Search for..." list="cityname" aria-label="Search" aria-describedby="basic-addon2" required/>
					    <datalist id="cityname">
					      @foreach(var barangay in  ViewBag.Address)
						   {
						    <option value="@barangay.Addname"></option>
						   } 
					    </datalist>
                    
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">🔍</button>
                    </div>
                  </div>
                </form>
              <br>  
            </div>
          </div>
	
      </form>
        
               
             <!-- /No Availabe Message -->        
           
           @if(ViewBag.message !=null)
           {   <br>
               <p class="card-text" style="color:red;">@ViewBag.message</p>
               
           }
           
            @if(ViewBag.messages !=null)
           {   <br>
               <p class="card-text">@ViewBag.messages</p>
               
           }
           
           
         <!-- /.View Vets -->  
        <br>
        <div class="row">

			@foreach(var product in Model)
			{
	          <div class="col-lg-4 col-md-6 mb-4">
	            <div class="card h-100">
	              <a href="/crudsample/details/@product.Id"><img class="card-img-top" src="/uploadedimages/thumb/@product.PictureFilename" alt=""></a>
	              <div class="card-body">
	                <h4 class="card-title">
	                  <a href="/crudsample/details/@product.Id">@product.Name</a>
	                </h4>
	                <h5> @product.Address, @product.AddCity</h5>
	                <p class="card-text"><a style="color:red">Open Hour's</a>: @product.Unit</p>
	                </div>
	                <div class="card-footer">
	                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
	              </div>
	            </div>
	          </div>
			}
          
          
          
        

        </div>
        <!-- /.row -->
          <!-- /.See more message -->
          @if(ViewBag.Adds !=null)
           {
              <a href="/crudsample/search">  <p class="card-text">@ViewBag.Adds</p></a>
               
           }
      </div>
      <!-- /.col-lg-9 -->

</div>
<!-- /.row -->

}
