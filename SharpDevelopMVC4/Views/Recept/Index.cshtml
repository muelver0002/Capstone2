@model List<SharpDevelopMVC4.Models.Recept>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
table {
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
  border: 1px solid #ddd;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}
</style>
</head>
<br>
<br>
 <form action="/Recept/Index">

   
   <div class="container">  
    <div class="row">
      <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" name="Searchkey"  placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">🔍</button>
                    </div>
                  </div>
                </form>
              <br>  
            </div>
          </div>
	
      </form>
<h2>Total: @ViewBag.TotalCount</h2>
<div style=" overflow: scroll; height: 500px; width: 500px">
<table class="">
        <thead>
            <tr>
                
                <th>Id</th>
                <th>Cus Id</th>
                <th>Unit</th>
                <th>price</th>
                <th>Qty</th>
                <th>Total</th>
                 
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                
	                <td>@product.Id</td>
	                <td>@product.CusId</td>
	                <td>@product.PName</td>
	                <td>@product.Price</td>
	                <td>@product.Qty</td>
	                <td>@product.Total</td>
	                
	                
	                 
	                 
	                 
	            </tr>
			}
        </tbody>
    </table>
    </div>