@{
	ViewBag.Title = "Reception";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (Request.IsAuthenticated)
     {
<h2>Reception</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/Reception/add" method="post">
            	 
            	 <div class="form-group">
                    <label >Full Name <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Customername" name="Customername" required />
                </div>  
               
             


                <div class="form-group">
                    <label >Contact Number <label style="color:red">*</label></label>
                    <input class="form-control" type="number" id="Number" name="Number" required/>
                </div>
                
                
                 <div class="form-group">
                    <label >Address <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Adrress" name="Adrress"  required/>
                </div>
                
                <div class="form-group">
                    <label >Concern <label style="color:red">*</label></label>
                    <textarea class="form-control" type="text" id="Concern" name="Concern" rows="4" cols="50" required>
                    </textarea>
                </div>
                
                 <div class="form-group">
                    <label >Pet Type <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Pettype" name="Pettype" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Color <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Petcolor" name="Petcolor" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Age<label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Petage" name="Petage" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Weight <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Weight" name="Weight" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Temperature <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Temperature" name="Temperature" required/>
                </div>
                
                <div class="form-group">
                    <label >Date Today <label style="color:red">*</label></label>
                    <input class="form-control" type="date" id="Datetoday" name="Datetoday" required/>
                </div>
                
                 <div class="form-group">
                    <label >Complain <label style="color:red">*</label></label>
                    <textarea class="form-control" type="text" id="Complain" name="Complain" rows="4" cols="50" required>
                    </textarea>
                </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>


                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>
 }