@{
	ViewBag.Title = "Addmed";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Addmed</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/medicine/Addmed" method="post">
            	 
            	<div class="form-group">
                    <label >Medicine</label>
                    <input class="form-control" type="text" id="" name="Name" required />
                </div>  
                
             <div class="form-group">
                    <label >Brand</label>
                    <input class="form-control" type="text" id="" name="Brand" required />
                </div> 
            
                
                 <div class="form-group">
                    <label >Price</label>
                    <input class="form-control" type="text" id="" name="Price" required />
                </div>  
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                     <a href="/Home/index" class="btn btn-secondary ">Cancel</a>
                     <p style="color:red">@ViewBag.message</p>
                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>