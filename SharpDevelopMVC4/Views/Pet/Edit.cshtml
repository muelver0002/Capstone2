@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var Product = ViewBag.Product;
}
 @if (Request.IsAuthenticated)
     {
<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/pet/edit?Id=@ViewBag.ID" method="post" class="form-horizontal">
            	 
            	 <div class="form-group">
                     <label>Name<label style="color:red">*</label>
                    <input class="form-control" type="text" id="PetName" name="PetName" value="@Product.PetName" required />
                </div>  
               
              
                
                 <div class="form-group">
                     <label>Breed<label style="color:red">*</label>
                    <input class="form-control" type="text" id="Breed" name="Breed" value="@Product.Breed" required/>
                   
                </div>

                <div class="form-group">
                    <label>Dog Type<label style="color:red">*</label>
                    <input class="form-control" type="text" id="Type" name="Type" value="@Product.Type" required/>
                </div>
                
                <div class="form-group">
                     <label>Color<label style="color:red">*</label>
                    <input class="form-control" type="text" id="Color" name="Color" value="@Product.Color" required/>
                </div>
                
                
                
                 <div class="form-group">
                    <label>Blood Type<label style="color:red">*</label>
                    <input class="form-control" type="text" id="Bloodtype" value="@Product.Bloodtype" name="Bloodtype" required/>
                </div>
                
                 <div class="form-group">
   
				   <label>Gender<label style="color:red">*</label>
				   <select name="Gender" class="form-control" value="@Product.Gender" required>
				   <option>Gender</option>
				  
				    <option value="Male">Male</option>
				    <option value="Female">Female</option>
				      
				   </select>
				   
				 </div>
                
                 <div class="form-group">
                    <label>Birth Date<label style="color:red">*</label>
                    <input class="form-control" type="Date" id="Bdate" value="@Product.Bdate" name="Bdate" required/>
                </div>
                
                
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                     <a href="/pet/index" class="btn btn-secondary ">Cancel</a>
                     <p style="color:red">@ViewBag.message</p>
                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>
}