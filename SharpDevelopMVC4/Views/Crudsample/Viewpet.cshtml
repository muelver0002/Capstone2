@model List<SharpDevelopMVC4.Models.Pet>
@{
	ViewBag.Title = "Viewpet";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (Request.IsAuthenticated)
     {
<h2>Viewpet</h2>

 <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>PetName</th>
                 <th>OwnersID</th>
                <th>OwnersName</th>
                <th>Breed</th>
                <th>Type</th>
                <th>Color</th>
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                <td>@product.Id</td>
	                <td>@product.PetName</td>	
	                <td>@product.OwnersID</td>	            
	                <td>@product.OwnersName</td>
	                <td>@product.Breed</td>
	                <td>@product.Type</td>
	                <td>@product.Color</td>
	               
	            </tr>
			}
        </tbody>
    </table>
    }