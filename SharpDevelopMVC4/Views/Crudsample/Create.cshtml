@model SharpDevelopMVC4.Models.Product

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h2>Regiter New Clinic</h2>
<br>
<hr/>
<div class="col-sm-10">

    <form action="/crudsample/Create" method="post" enctype="multipart/form-data" class="form-horizontal">
    	@Html.AntiForgeryToken()
    	
        <fieldset>
            
            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {                   
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
				  @Html.ValidationSummary(true)
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    <span aria-hidden="true">&times;</span>
				  </button>
				</div>                    
			}
           
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" >Vets Name <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control input-md" required>
                </div>
            </div>            


              <div class="form-group">
                    <label class="col-md-4 control-label" >User Name <label style="color:red">*</label></label>
                     <div class="col-md-4">
                    <input class="form-control" type="text" id="UserName" name="UserName" required/>
                </div>
               </div> 
                
                <div class="form-group">
                    <label class="col-md-4 control-label" >Password <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input class="form-control" type="Password" id="Password" name="Password" required/>
                </div>
               </div>
                
                 <div class="form-group">
                    <label class="col-md-4 control-label">Retype Password <label style="color:red">*</label></label>
                     <div class="col-md-4">
                    <input class="form-control" type="Password" id="Password" name="RetypePassword" required/>
                </div>
               </div> 

            <div class="form-group">
                <label class="col-md-4 control-label" >Address <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input type="text" id="" name="Address" value="" placeholder="Street Brgy" class="form-control input-md" required>
                    <input type="text" id="" name="AddCity" value="" placeholder="Example City" class="form-control input-md" required>
                </div>
            </div>
            

            <div class="form-group">
                <label class="col-md-4 control-label" >Contact Info <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input type="text" id="Unit" name="contactInfo" value="" class="form-control input-md">
                </div>
            </div>
            
            
             <div class="form-group">
                <label class="col-md-4 control-label" for="">Time Schedule <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input type="text" id="Unit" name="Unit" value="" class="form-control input-md">
                </div>
            </div>
            
            
            
         
     

			<!-- File Upload -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="fileUpload">Photo <label style="color:red">*</label></label>
                <div class="col-md-4">
                    <input type="file" accept="image/*" id="fileUpload" name="fileUpload" class="form-control input-md">
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary btn-lg" onclick="return ('Your Subsiomison wil send and wait for Approval')">Submit</button>
                </div>
            </div>

        </fieldset>
    </form>

</div>

