@model SharpDevelopMVC4.Models.Customer
@{
	ViewBag.Title = "Appointment";
	Layout = "~/Views/Shared/_Layout.cshtml";


}



 @if (Request.IsAuthenticated)
     {
     if(User.IsInRole("customer"))
	  {
	  <!DOCTYPE html>
<html>
    <head>
        <title>Bootstrap Datepicker Disable Past Dates Example - itsolutionstuff.com/</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css">
        <script src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </head>
<body>
    
<h2>Reserve Appointment</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/appointment/add" method="post">
            	 
            	 <div class="form-group">
                    
                    <input class="form-control" value="@Model.Id" type="hidden" id="" name="CustId" required />
                    
                </div> 
            	 
            	 <div class="form-group">

                    <input class="form-control" value="@ViewBag.Name" type="hidden" id="" name="Vetname" required />
                </div> 
            	 
            	 
            	 <div class="form-group">

                    <input class="form-control" value="@Model.Fullname" type="hidden" id="Customername" name="Customername" required />
                </div>  
               
             
                
                 <div class="form-group">

                    <input class="form-control" value="@Model.Address,@Model.AddCity" type="hidden" id="Address" name="Address"  required/>
                </div>


                <div class="form-group">

                    <input class="form-control" value="@Model.Number" type="hidden" id="Number" name="Number" required/>
                </div>
                
                
                <div class="form-group">
   
				   <label>Select Pet<label style="color:red">*</label>
				   <select name="Pet" class="form-control" required>
				   <option></option>
				   @foreach(var cat in ViewBag.pets)
				   {
				    <option value="@cat.Id">@cat.PetName</option>
				   }   
				   </select>
				   
				 </div>
				 
				
				 @{
				   int i =0;
				 
				 }
				 
				<div class="form-group">
				<label>Select Services<label style="color:red">*</label><br>
				 @foreach(var service in ViewBag.services)
				 {
				  <input type="checkbox" name="Services[]" value="@service.Servicesname" > @service.Servicesname
				  <br>
				 }
                
                </div>
                
               
                <br>
              
                
                <div class="form-group">
                <label>Day of appointment<label style="color:red">*</label><br>                
			    <input type="text" name="Dayofappointment" type="date" class="form-control datepicker" required>
		     	</div>
                
                
                
                
                 <div class="form-group">                    
                   <input class="form-control" value="@ViewBag.Id" type="hidden" id="VetId" name="VetId"  required/>
                 </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>


                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>
    
</body>
     
<script type="text/javascript">
   
    $('.datepicker').datepicker({ 
        startDate: new Date()
    });
  
</script>
</html>
				

}
}