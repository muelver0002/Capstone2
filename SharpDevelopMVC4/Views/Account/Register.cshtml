@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/account/register" method="post">
            	 
            	 <div class="form-group">
                    <label >Full Name <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Fullname" name="Fullname" required />
                </div>  
               
             
                
                 <div class="form-group">
                    <label >Address <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Addess" name="Addess" Placeholder="Brgy" required/>
                    <input type="text" id="" name="AddCity" value="" placeholder="Example City" class="form-control input-md" required>
                </div>
                
                <div class="form-group">
                    <label >Contact Number <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Number" name="Number" required />
                </div> 

                <div class="form-group">
                    <label >User Name <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="UserName" name="UserName" required/>
                </div>
                <div class="form-group">
                    <label >Password <label style="color:red">*</label></label>
                    <input class="form-control" type="Password" id="Password" name="Password" required/>
                </div>
                 <div class="form-group">
                    <label for="password">Retype Password <label style="color:red">*</label></label>
                    <input class="form-control" type="Password" id="Password" name="RetypePassword" required/>
                </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save </button>
                     <a href="/account/login" class="btn btn-secondary ">Back</a>
                     <p style="color:red">@ViewBag.message</p>
                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>
