@model List<SharpDevelopMVC4.Models.Customer>

@{
	ViewBag.Title = "ManageCustom";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (Request.IsAuthenticated)
     {
<h2>Customer List</h2>

 <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Address</th>
                <th>User Name</th>
                <th>Passsword</th>
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                <td>@product.Id</td>
	                <td>@product.Fullname</td>	            
	                <td>@product.Address, @product.AddCity</td>
	                <td>@product.Username</td>
	                <td>@product.Password</td>
	               
	            </tr>
			}
        </tbody>
    </table>
    }