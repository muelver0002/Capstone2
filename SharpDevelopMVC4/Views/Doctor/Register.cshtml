@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/Doctor/Register" method="post">
            	 
            	 <div class="form-group">
                    <label >Full Name <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="Fullname" name="Fullname" required />
                </div>  
               
      
                <div class="form-group">
                    <label >User Name <label style="color:red">*</label></label>
                    <input class="form-control" type="text" id="UserName" name="UserName" minlength="8" required/>
                </div>
                <div class="form-group">
                    <label >Password <label style="color:red">*</label></label>
                    <input class="form-control" type="Password" id="Password" name="Password" pattern=".{8,12}" required title="8 to 12 characters" required/>
                </div>
                 <div class="form-group">
                    <label for="password">Retype Password <label style="color:red">*</label></label>
                    <input class="form-control" type="Password" id="" name="RetypePassword" required/>
                </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                     <a href="/Home/index" class="btn btn-secondary ">Cancel</a>
                </div>
                <div class="form-group">
                   <p style="color:red">@ViewBag.messages</p>
                   <p style="color:red">@ViewBag.message</p>
                </div>				               
            </form>
            
        </section>
    </div>


</div>
