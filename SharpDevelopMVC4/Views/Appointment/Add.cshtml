@model SharpDevelopMVC4.Models.Customer
@{
	ViewBag.Title = "Appointment";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (Request.IsAuthenticated)
     {
     if(User.IsInRole("customer"))
				{
<h2>Reserve Appointment</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/appointment/add" method="post">
            	 
            	 <div class="form-group">
                    <label >Full Name <label style="color:red">*</label></label>
                    <input class="form-control" value="@Model.Fullname" type="text" id="Customername" name="Customername" required />
                </div>  
               
             
                
                 <div class="form-group">
                    <label >Address <label style="color:red">*</label></label>
                    <input class="form-control" value="@Model.Address,@Model.AddCity" type="text" id="Address" name="Address"  required/>
                </div>


                <div class="form-group">
                    <label >Contact Number <label style="color:red">*</label></label>
                    <input class="form-control" value="@Model.Fullname" type="number" id="Number" name="Number" required/>
                </div>
                
                
               <div class="form-group">
                    <label >Concern <label style="color:red">*</label></label>
                    <textarea class="form-control" type="text" id="Concern" name="Concern" required>
                    </textarea>
                </div>
                
              
                
                 <div class="form-group">
                    <label >Day of appointment <label style="color:red">*</label></label>
                    <input class="form-control" type="Date" id="Dayofappointment" name="Dayofappointment" required/>
                </div>
                
                
                
                
                 <div class="form-group">                    
                   <input class="form-control" value="@ViewBag.Id" type="hidden" id="VetId" name="VetId"  required/>
                 </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>


                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>
}
}